{
  "name": "schemas-docusaurus",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "format": "prettier --write **/*.{js,mdx,ts,tsx,json}",
    "typecheck": "tsc",
    "test": "yarn ci",
    "test:jest": "jest",
    "test:schemas": "ajv compile -s \"schemas/com.*.json\" --spec=draft2020 -c ajv-formats --strict=true -r \"schemas/cloudevents.json\" -r \"schemas/glides-events.json\"",
    "test:examples": "ts-node src/scripts/validate_examples.ts",
    "ci": "yarn format --check && yarn typecheck && yarn test:jest && yarn test:schemas && yarn test:examples"
  },
  "dependencies": {
    "@docusaurus/core": "2.4.0",
    "@docusaurus/preset-classic": "2.4.0",
    "@mdx-js/react": "^1.6.22",
    "@stoplight/json-ref-readers": "^1.2.2",
    "clsx": "^1.2.1",
    "deepmerge": "^4.3.1",
    "docusaurus-json-schema-plugin": "^1.6.0",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack-merge": "^5.8.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.4.0",
    "@tsconfig/docusaurus": "^1.0.5",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1",
    "jest": "^29.5.0",
    "json-schema-migrate": "^2.0.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "browserslist": {
    "production": [">0.5%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.15"
  }
}
