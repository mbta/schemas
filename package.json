{
  "scripts": {
    "format": "prettier --write .",
    "test:format": "prettier --check .",
    "test:json:compile": "ajv compile --spec=draft2020 -s \"schemas/*.json\"",
    "test:json:validate": "ts-node scripts/json_validate.ts",
    "test": "npm run test:format && npm run test:json:compile && npm run test:json:validate"
  },
  "devDependencies": {
    "@types/node": "^18.14.0",
    "ajv": "^8.12.0",
    "ajv-cli": "5.0.0",
    "prettier": "2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
